{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "ConnectionStrings": {
        "Default": "Server=(localdb)\\HarmonyDB; Database=Harmony; Integrated Security=True; Trust Server Certificate=True"
    },

    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "async": true,
            //"logfile": {
            //    "type": "File",
            //    "fileName": "c:/temp/nlog-${shortdate}.log"
            //},
            "logconsole": {
                "type": "ColoredConsole"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "logconsole",
                "layout": "${longdate} | ${level:uppercase=true} | ${logger} | ${callsite} | ${message} ${exception:format=tostring}"
            }
        ]
    }
}
